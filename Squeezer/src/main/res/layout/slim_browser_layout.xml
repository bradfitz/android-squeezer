<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="32dp"
        android:paddingTop="8dp"
        android:visibility="gone"
        style="@style/ListHeader"
        tools:visibility="visible">

        <uk.org.ngo.squeezer.widget.SquareImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/album_art_large_icon_width"
            android:layout_height="@dimen/album_art_large_icon_height"
            android:contentDescription="@string/app_name"
            android:maxHeight="@dimen/album_art_large_icon_height"
            android:maxWidth="@dimen/album_art_large_icon_width"
            android:minHeight="@dimen/album_art_large_icon_height"
            android:minWidth="@dimen/album_art_large_icon_width"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/icon_album_noart"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SqueezerTextAppearance.ListItem.Primary"
                tools:text="text1"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SqueezerTextAppearance.ListItem.Secondary"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="text2"/>
        </LinearLayout>

        <include layout="@layout/context_menu_image_button"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sub_header_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/sub_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:textAppearance="@style/SqueezerTextAppearance.ItemList.SubHeader"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/input_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plugin_input_til"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plugin_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/input_button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_keyboard_return"
            android:layout_width="48dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <include layout="@layout/item_list"
        android:id="@+id/item_list"
        tools:listitem="@layout/list_item"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>
